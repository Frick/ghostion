<div id="at_header">
    <div class="row">
        <div class="medium-4 columns">
            <div class="at_logo_container">
                {{#if @blog.logo}}
                    <a href="{{@blog.url}}"><img class="at_logo_img" src="{{@blog.logo}}" alt="{{@blog.title}}" />
                    {{else}}
                        <a href="{{@blog.url}}">
                {{/if}}
                    <span class="at_logo_text">{{@blog.title}}</span></a>
            </div>
        </div>
        <div class="medium-4 columns text-right hide-for-small-only">
            <div class="at_icon_menu">
                <a class="at_icon_menu_item" href="{{@blog.url}}/about" data-tooltip class="has-tip" title="About"><span class="fa fa-book"></span></a>
                <a class="at_icon_menu_item" href="https://github.com/Frick" data-tooltip class="has-tip" title="GitHub"><span class="fa fa-github"></span></a>
                <a class="at_icon_menu_item" href="https://twitter.com/mdfrick" data-tooltip class="has-tip" title="Twitter"><span class="fa fa-twitter"></span></a>
                <a class="at_icon_menu_item" href="http://www.linkedin.com/pub/michael-frick/21/53a/45a/" data-tooltip class="has-tip" title="LinkedIn"><span class="fa fa-linkedin"></span></a>
            </div>
        </div>
        <div class="medium-4 columns">
            {{> widgets/at_search }}
        </div>
    </div>
</div>
